{{>_buttonGroup}}

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h1 style="color:darkblue;">Ingreso</h1>
            <br>

            <form action="/login" method="post">

                <div class="form-group">
                    <label for="email"><b>Email</b></label>
                    <input id="email" class="form-control" type="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password"><b>Password</b></label>
                    <input id="password" class="form-control" type="password" name="password">
                </div>

                <div class="form-group">
                    <label for="password02"><b>Re-type password</b></label>
                    <input id="password02" class="form-control" type="password" name="password">
                </div>
                <div class="form-group">
                    <label for="first_name"><b>Email</b></label>
                    <input id="first_name" class="form-control" type="text" name="first_name">
                </div>

                <div class="form-group">
                    <label for="last_name"><b>Password</b></label>
                    <input id="last_name" class="form-control" type="password" name="last_name">
                </div>

                <div class="form-group">
                    <label for="age"><b>Password</b></label>
                    <input id="age" class="form-control" type="number" name="age">
                </div>

                <button type="submit" class="btn btn-success mt-3 mb-5">Enviar</button>
            </form>

        </div>
    </div>
</body>
