if productos.length> 0
    div(class="table-responsive")
        table(class="table table-dark table-bordered table-striped")
            tr
                th="Id"
                th="Nombre"
                th="Precio"
                th="Imagen"
            each product in productos
                tr
                    td=product.id
                    td=product.title
                    td=product.price
                    td
                      img(src=product.thumbnail)
else
    h3(class="alert alert-danger")="No hay productos"